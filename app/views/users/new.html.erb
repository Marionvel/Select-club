<h1>Inscription</h1>


<div class="row justify-content-center">
	<div class="col-lg-8">

	<%= form_for @user, url: users_path do |f| %>

		<div class="form-group">
			<%= f.label(:first_name, "Ton Nom :") %>
		  	<%= f.text_field :first_name, { class: 'form-control' } %>
        </div>
        
        <div class="form-group">
			<%= f.label(:last_name, "Ton Prénom :") %>
		  	<%= f.text_field :last_name, { class: 'form-control' } %>
        </div>
        
        <div class="form-group">
			<%= f.label(:pseudo, "Ton pseudo :") %>
		  	<%= f.text_field :pseudo, { class: 'form-control' } %>
		</div>

		<div class="form-group">
			<%= f.label(:email, "Ton email :") %>
		  	<%= f.text_field :email, { class: 'form-control' } %>
		</div>

        <div class="form-group">
            <%= f.label(:password, "Saisis un mot de passe :") %>
            <%= f.password_field :password, class:"form-control", placeholder:"Mot de passe" %>
		</div>
		


        <%= f.submit("Créer mon compte", class: 'btn btn-outline-dark') %>
        
	<% end %><br>
	</div>
</div>